@model IEnumerable<BobaShop.Models.Cart>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = 0;
}

    <h1>Cart</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    total += item.Quantity * item.Price;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @String.Format("{0:c}", item.Price)
            </td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-id="@item.CartId" onclick="return ConfirmDelete();">Delete</a>
            </td>
        </tr>
}   
    <tr>
        <td class="text-right">@String.Format("{0:c}", total)</td>
        <td>
            <a asp-controller="Shop" asp-action="Index"><< Keep Shopping</a>
            <a asp-controller="Shop" asp-action="Checkout" class="btn btn-primary">Checkout</a>
        </td>
    </tr>

    </tbody>
</table>
